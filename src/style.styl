@css {@import url(https://fonts.googleapis.com/css?family=Arvo:400,400italic,700,700italic);}

@import colors
@import '../kouto-swiss'

meyer-reset()
box-sizing-reset()
normalize()

header-height = 20vh
footer-height = 10vh

flex-center()
    display -ms-flex
    -ms-flex-direction column
    -ms-justify-content center
    -ms-align-content space-around
    -ms-align-items center

    display -webkit-flex
    -webkit-flex-direction column
    -webkit-justify-content center
    -webkit-align-content space-around
    -webkit-align-items center

    display flex
    flex-direction column
    justify-content center
    align-content space-around
    align-items center

disable-user-select()
    -webkit-touch-callout none
    -webkit-user-select   none
    -khtml-user-select    none
    -moz-user-select      none
    -ms-user-select       none
    user-select           none
    cursor             default

header
    position absolute
    top 0
    height header-height
    width 100%
    background-color color-primary-0
    background-image url(line-bg.png)

    flex-center()
    disable-user-select()

    .logo
        text-align center
        font-family 'Arvo'
        font-weight 700
        font-size 2em
        color color-primary-1

    .tagline
        text-align center
        color color-complement-1
        font-family 'Arvo'
        font-weight 400
        font-style italic
        text-transform lowercase

    hr
        width 5em
        height 2px
        border none
        background-color color-complement-2
        margin 3ex auto

main
    background-color color-complement-4
    position absolute
    top header-height
    height 100vh - (header-height + footer-height)
    width 100%
    z-index 1

    flex-center()

    article

        font-family 'Arvo'
        line-height 1.2

        dt
            color color-primary-0

        dd
            padding 1ex
            color color-primary-3
            margin-bottom 1ex

        li
            margin-left 1ex

        li:before
            content '>'
            margin-right 1ex



footer
    position absolute
    height footer-height
    top 100vh - @height
    width 100%
    background-color color-secondary-1-3
    background-image url(line-bg.png)

