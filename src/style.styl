@css {@import url(http://fonts.googleapis.com/css?family=Oranienbaum|Playfair+Display+SC:400,400italic,700,700italic,900,900italic|EB+Garamond|Kurale&subset=latin,cyrillic);}

@import colors
@import '../kouto-swiss'

meyer-reset()
box-sizing-reset()
normalize()

header-height = 20vh
footer-height = 10vh

flex-center()
    display -ms-flex
    -ms-flex-direction column
    -ms-justify-content center
    -ms-align-content space-around
    -ms-align-items center

    display -webkit-flex
    -webkit-flex-direction column
    -webkit-justify-content center
    -webkit-align-content space-around
    -webkit-align-items center

    display flex
    flex-direction column
    justify-content center
    align-content space-around
    align-items center

disable-user-select()
    -webkit-touch-callout none
    -webkit-user-select   none
    -khtml-user-select    none
    -moz-user-select      none
    -ms-user-select       none
    user-select           none
    cursor             default

header
    position absolute
    top 0
    height header-height
    width 100%
    background-color color-primary-0
    background-image url(line-bg.png)

main
    background-color color-complement-4
    position absolute
    top header-height
    height 100vh - (header-height + footer-height)
    width 100%
    z-index 1

    flex-center()

    article
        flex-center()
        disable-user-select()

        .logo
            text-align center
            color rgba(0,0,0,0)
            background-image url(logo-medium.png)
            width 260px
            height 130px

        .tagline
            text-align center
            color color-complement-1
            width 70vw
            font-family 'Kurale'
            text-transform lowercase

        hr
            width 5em
            height 2px
            border none
            background-color color-complement-2
            margin 3ex auto

footer
    position absolute
    height footer-height
    top 100vh - @height
    width 100%
    background-color color-secondary-1-3
    background-image url(line-bg.png)

